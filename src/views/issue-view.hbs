{{!-- Create Module Modal --}}

{{#block "modal"}}
<div class="modal fade" id="modal-add-issue" tabindex="-1" role="dialog" aria-labelledby="modalTitleId"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg" role="document">
        <div class="modal-content align-items-center fw-bold color-deep-violet primary-background"
            style="padding: 0 6%;">
            <div class="modal-header" style="border-bottom: none;">
                <p class="modal-title fs-3" id="modalTitleId">
                    Add New Issue
                </p>
            </div>
            <div class="modal-body" style="border-bottom: none; width: 100%;">

                <div class="row mb-3">
                    <div class="col">
                        <label for="issue-title-input">
                            Title <span style="color: #F0270C;">*</span> :
                        </label>
                        <input type="text" name="issue-title-input" id="issue-title-input" class="form-control mt-2"
                            placeholder="Title">
                        <div id="issue-title-error" class="text-danger fs-6 fw-normal" style="display: none;">Please
                            enter issue title</div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label for="issue-priority-input">
                            Priority <span style="color: #F0270C;">*</span> :
                        </label>
                        <select name="priority-input" class="form-select mt-2" aria-label="Default select example"
                            id="issue-priority-input" required>
                            <option value="" selected>Select priority</option>
                            <option class="fw-medium fs-6 color-deep-green" value="Low">Low</option>
                            <option class="fw-medium fs-6 color-sea" value="Medium">Medium</option>
                            <option class="fw-medium fs-6 color-orange" value="High">High</option>
                            <option class="fw-medium fs-6 color-red" value="Very High">Very High</option>
                        </select>
                        <div id="issue-priority-error" class="text-danger fs-6 fw-normal" style="display: none;">Please
                            select issue's priority</div>

                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label for="issue-status-input">
                            Status <span style="color: #F0270C;">*</span> :
                        </label>
                        <select name="issue-status-input" class="form-select mt-2" aria-label="Default select example"
                            id="issue-status-input" required>
                            <option value="" selected>Select status</option>
                            <option class="fw-medium fs-6 color-blue" value="Opened">Opened</option>
                            <option class="fw-medium fs-6 color-sea" value="Assigned">Assigned</option>
                            <option class="fw-medium fs-6 color-green" value="In Progress">In Progress</option>
                            <option class="fw-medium fs-6 color-black" value="Fixed">Fixed</option>
                            <option class="fw-medium fs-6 color-black" value="Closed">Closed</option>
                            <option class="fw-medium fs-6 color-red" value="Reopened">Reopened</option>
                            <option class="fw-medium fs-6 color-deep-green" value="Deferred">Deferred</option>
                            <option class="fw-medium fs-6 color-deep-green" value="Duplicate">Duplicate</option>
                            <option class="fw-medium fs-6 color-black" value="Cannot Reproduce">Cannot Reproduce
                            </option>
                            <option class="fw-medium fs-6 color-green" value="Pending Verification">Pending Verification
                            </option>
                            <option class="fw-medium fs-6 color-orange" value="Awaiting Feedback">Awaiting Feedback
                            </option>
                            <option class="fw-medium fs-6 color-red" value="Blocked">Blocked</option>
                        </select>
                        <div id="issue-status-error" class="text-danger fs-6 fw-normal" style="display: none;">Please
                            select issue's status</div>

                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label for="issue-assign-input">
                            Assign to:
                        </label>
                        <input type="text" name="issue-assign-input" id="issue-assign-input" class="form-control mt-2"
                            placeholder="">
                        <div id="issue-assign-error-1" class="text-danger fs-6 fw-normal" style="display: none;">Please
                            enter assignee when status is not opened</div>
                        <div id="issue-assign-error-2" class="text-danger fs-6 fw-normal" style="display: none;">Please
                            assign to existing user</div>


                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label for="issue-type-input">
                            Issue Type :
                        </label>
                        <input type="text" name="issue-type-input" id="issue-type-input" class="form-control mt-2"
                            placeholder="">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label for="issue-module-input">
                            Module :
                        </label>
                        <input type="text" name="issue-module-input" id="issue-module-input" class="form-control mt-2"
                            placeholder="">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label for="issue-testcase-input">
                            Test case failed :
                        </label>
                        <input type="text" name="issue-testcase-input" id="issue-testcase-input"
                            class="form-control mt-2" placeholder="">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label for="issue-description-input">
                            Description :
                        </label>
                        <input type="text" name="issue-description-input" id="issue-description-input"
                            class="form-control mt-2" placeholder="">
                    </div>
                </div>
            </div>

            <div class="modal-footer" style="border-top: none;">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Close
                </button>
                <button type="button" class="btn btn-primary" id="save-add-issue-button">Save</button>
            </div>
        </div>
    </div>
</div>
{{/block}}

