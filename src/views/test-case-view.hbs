<div class="content row m-2 flex-grow-1" style="height: 100%; padding: 0 5%;">
    <div class="col-3"
        style="height: 100%; background-color: #FFFFFF; border-top-right-radius: 20px; border-top-left-radius: 20px;">
        <div class="d-flex justify-content-between align-items-center p-3"
            style="border-bottom: solid rgba(150,150,150,0.2) 1px; height: 10%;  min-height: 65px;">
            <p style="color:#232360; font-size: 1.2rem; padding: 0; margin: 0; font-weight: bold;">
                Modules</p>
        </div>
        <div class="d-flex flex-column gap-3 modules-list px-4 py-3"
            style="color: #232360; font-weight: 700; font-size: 1.1rem;">
            {{#each modules}}
            <div>
                <i class="bi bi-folder"></i>
                {{this.name}}
            </div>
            {{/each}}
            {{!-- <div>
                <i class="bi bi-folder"></i>
                Modules 1
            </div>
            <div>
                <i class="bi bi-folder"></i>
                Modules 2
            </div> --}}
        </div>
    </div>
    <div class="col-1 offset-col"></div>
    <div class="col-8"
        style="height: 100%; background-color: #FFFFFF; border-top-right-radius: 20px; border-top-left-radius: 20px;">
        <div class="d-flex justify-content-between align-items-center p-3"
            style="border-bottom: solid rgba(150,150,150,0.2) 1px; height: 10%; min-height: 65px">
            <p style="color:#232360; font-size: 1.2rem; padding: 0; margin: 0; font-weight: bold;">
                Testcases</p>
            <input type="text" class="form-control" id="search-input-title" placeholder="Search by Title"
                style="color: #C4C4DA; font-weight: 600; width: 24%; background-color: #F1F1F1; border-radius: 5px; border:none; padding: 10px" />
        </div>
        <div class="d-flex align-items-center justify-content-between px-xl-5 py-xl-4" style="height: 10%;">
            <div class="top-left-testcase-list d-flex justify-content-center align-items-center gap-3">
                <p style="font-size: 1rem; color: #9c9c9c; font-weight: 600;">Show</p>
                <select name="show" class="form-select number-of-row" aria-label="Default select example" required>
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="30">30</option>
                    <option value="50">50</option>
                </select>
            </div>
            <div class="top-right-testcase-list d-flex justify-content-between align-items-center gap-3">
                <select name="show" class="form-select feature" aria-label="Default select example"
                    style="width: max-content;" required>
                    <option value="1">Created Date</option>
                    <option value="2">Testcase Code</option>
                    <option value="3">Testcase Title</option>
                </select>
                <select name="show" style="width: max-content;" class="form-select sorting"
                    aria-label="Default select example" required>
                    <option value="1">ASC</option>
                    <option value="2">DES</option>
                </select>
            </div>
        </div>
        <div class="test-caselist">
            <div class="table-responsive" style="overflow-y: auto; padding: 0 3rem;">
                <table class="table">
                    <thead class="fs-xl-5">
                        <th class="col-xl-1 col-md-1" style="opacity: 0;"><input type="checkbox"></input></th>
                        <th class="col-xl-3 col-md-3 testcase-code">Testcase Code</th>
                        <th class="col-xl-5 col-md-4 testcase-name">Testcase Title</th>
                        <th class="col-xl-2 col-md-3">Action</th>
                    </thead>
                    <tbody class="fs-xl-5">
                        {{#each testcases}}
                        <tr>
                            <td><input type="checkbox"></input></td>
                            <td class="testcase-code">{{this.testcase_id}}</td>
                            <td class="testcase-name">{{this.name}}</td>
                            <td>
                                <i class="bi bi-eye hover-icon" style="margin-right: 20px;"></i>
                                <i class="bi bi-pencil hover-icon text-success" style="margin-right: 20px;"></i>
                                <i class="bi bi-trash hover-icon text-danger"></i>
                            </td>
                        </tr>
                        {{/each}}
                        {{!-- <tr>
                            <td><input type="checkbox"></input></td>
                            <td class="testcase-code">TC001</td>
                            <td class="testcase-name">Testcase 1</td>
                        </tr>
                        <tr>
                            <td><input type="checkbox"></input></td>
                            <td class="testcase-code">TC002</td>
                            <td class="testcase-name">Testcase 2</td> --}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


{{!-- Create Testcase Modal --}}

{{#block "modal"}}
<div class="modal fade" id="modal1" tabindex="-1" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg" role="document">
        <div class="modal-content align-items-center"
            style="color: #232360; font-weight: 900; padding: 0 6%; background-color: #F3F4F8;">
            <div class="modal-header" style="border-bottom: none;">
                <p class="modal-title fs-3" id="modalTitleId">
                    Add New TestCase
                </p>
            </div>
            <div class="modal-body" style="border-bottom: none; width: 100%;">
                <div class="row mb-3">
                    <div>
                        <label for="testcase-name">Testcase's Name <span style="color: #F0270C" ;>*</span>:</label>
                        <input name="testcase-name" type="text" class="form-control" id="testcase-name" />
                    </div>
                </div>
                <div class="row mb-3 align-items-center">
                    <div class="col-3">
                        <label for="module">Select Module:</label>
                    </div>
                    <div class="col-7 offset-2">
                        <select id="module-select" name="module" class="form-control" aria-label="Default select example">
                            {{#each modules}}
                            <option value="{{module_id}}">{{name}}</option>
                            {{/each}}
                            {{!-- <option value="1">Module 1</option>
                            <option value="2">Module 2</option> --}}
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div>
                        <lable for="testcase-description">
                            Description:
                        </lable>
                        <textarea id="testcase-description" name="testcase-description" class="form-control" placeholder="Description" rows="4"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="border-top: none;">
                <button type="button" class="btn btn-secondary next-button"
                    style="background-color: #41D37E; color: #23235F; border: none; border-radius: 10px; padding: 10px 40px; font-weight: 600;"
                    data-next="#modal2" onclick="onModal1NextClick()">
                    Next Step
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal2" tabindex="-1" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
