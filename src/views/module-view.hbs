        </div>

        <div class="col-sm-4">
            <div class="modules-level-2 card custom-card">
                <!-- Header của card -->
                <div class="card-header bg-white border-0 align-items-center">
                    <div class="row">
                        <div class="col">
                            <h3 class="card-title">Sub Modules</h3>
                        </div>
                    </div>
                </div>
                <div class="custom-divider"></div>
